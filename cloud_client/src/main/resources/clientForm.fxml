<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientController">
    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выйти из программы" />
        </Menu>
    </MenuBar>

    <HBox fx:id="loginPane" spacing="5">
        <Label prefHeight="22.0" prefWidth="30.0" text="Login" HBox.hgrow="ALWAYS">

        </Label>
        <TextField fx:id="loginText" promptText="введите логин" HBox.hgrow="ALWAYS">
        </TextField>
        <Label prefHeight="26.0" prefWidth="50.0" text="Password" HBox.hgrow="ALWAYS">

        </Label>
        <PasswordField fx:id="passText" HBox.hgrow="ALWAYS">

        </PasswordField>
        <Button fx:id="btnLogin" onAction="#btnLoginOnAction" text="Log in" HBox.hgrow="ALWAYS">

        </Button>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>


    <HBox VBox.vgrow="ALWAYS">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <HBox spacing="5">
                <TextField editable="false" HBox.hgrow="ALWAYS">
                </TextField>
                <Button text="Вверх" />
            </HBox>

            <TableView fx:id="listServerFiles" VBox.vgrow="ALWAYS">

            </TableView>
        </VBox>
        <VBox spacing="5">
            <Button fx:id="btnDownload" maxWidth="Infinity" onAction="#btnDownloadOnAction" text="Загрузить" textAlignment="CENTER">

            </Button>
            <Button fx:id="btnUpload" maxWidth="Infinity" onAction="#btnUploadOnAction" text="Выгрузить" textAlignment="CENTER">

            </Button>
            <Button fx:id="btnDelete" maxWidth="Infinity" onAction="#btnDeleteOnAction" text="Удалить" textAlignment="CENTER">

            </Button>
            <Button fx:id="btnRefresh" maxWidth="Infinity" onAction="#btnRefreshOnAction" text="Обновить" textAlignment="CENTER">

            </Button>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="25.0" />
         </padding>
         <HBox.margin>
            <Insets />
         </HBox.margin>
        </VBox>
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <HBox spacing="5">
                <ComboBox>
                </ComboBox>
                <TextField editable="false" HBox.hgrow="ALWAYS">
                </TextField>
                <Button text="Вверх" />
            </HBox>

            <TableView fx:id="listClientFiles" VBox.vgrow="ALWAYS">

            </TableView>
        </VBox>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>
   <ProgressBar fx:id="progress" maxWidth="Infinity" />
</VBox>
